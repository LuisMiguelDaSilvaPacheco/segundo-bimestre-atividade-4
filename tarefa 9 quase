programa
{
	inclua biblioteca Texto --> T
	
	funcao inicio()
	{

		cadeia nome
		inteiro idade, salario

		enquanto(verdadeiro){

		escreva("Diga seu nome \n")
		leia(nome)

		se(T.numero_caracteres(nome) > 3){
		
		escreva("Senha insegura \n")
		
		}senao{
			
		escreva("Senha segura \n")
		pare

		}
		}

		enquanto(verdadeiro){

		escreva("Diga sua idade \n")
		leia(idade)

		se(idade < 0 ou idade > 150){
		
		escreva("Senha insegura \n")
		
		}senao{
			
		escreva("Senha segura \n")
		pare

		}
		}
		
		enquanto(verdadeiro){

		escreva("Diga seu salário \n")
		leia(idade)

		se(idade < 0 ou idade > 150){
		
		escreva("Salário irreal \n")
		
		}senao{
			
		escreva("Salário aceito")
		pare

		}
		}
	}
}
